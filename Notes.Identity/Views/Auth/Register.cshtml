@model RegisterViewModel
<head>
    <link href=@Url.Content("~/styles/app.css") rel="stylesheet" type = "text/css"/><title>NotesRegister</title>
</head>
<form asp-controller="Auth" asp-action="Register" method="post">
    <input type="hidden" asp-for= "ReturnUrl"/>
    <div class="header">Sing Up</div>
    <div class="block">
        <label>UserName</label>
        <input asp-for="UserName" class="input"/>
        <span asp-validation-for="UserName"></span>
    </div>
    <div class="block">
        <label>Passsword</label>
        <input asp-for="Password" class="input"/>
        <span asp-validation-for="Password"></span>
    </div>
    <div class="block">
        <label>ConfirmPassword</label>
        <input asp-for="ConfirmPassword" class="input"/>
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <div class="block">
        <button type="submit" class="button">Sing Up</button>
    </div>
    <a asp-controller="Auth" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl"
       class="switch-button">Login</a>
</form>